{
  "name": "hfr-running-bot",
  "version": "1.0.0",
  "description": "Discord bot that displays Strava activities from running team members",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "discord",
    "bot",
    "strava",
    "running",
    "fitness"
  ],
  "author": "Mat",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "chalk": "^5.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.57.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
